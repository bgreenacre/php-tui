{
    "name": "php-tui/php-tui",
    "description": "A library to handle terminal interaction and is inspired by nodejs blessed package",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "PhpTui\\PhpTui\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Brian Greenacre",
            "email": "bgreenacre42@gmail.com"
        }
    ],
    "require": {
        "react/event-loop": "^1.2",
        "react/stream": "^1.2",
        "symfony/string": "^5.3",
        "clue/utf8-react": "^1.2",
        "clue/term-react": "^1.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5 || ^8.5 || ^9.5",
        "phpstan/phpstan": "^1.1",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "scripts": {
        "phpcs": "phpcs",
        "phpstan": "phpstan analyse",
        "phpunit": "phpunit --no-coverage",
        "test": [
            "@phpcs",
            "@phpstan",
            "@phpunit"
        ]
    }
}
